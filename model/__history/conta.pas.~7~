unit conta;

interface

uses
  System.SysUtils, Classes, itemConsumido;

type
  TConta = class

  private
    FCodigo: string;
    FNome: string;
    FData: TDateTime;
    FItems: TList;

    constructor Create;
    procedure setCodigo(value: string);
    procedure setNome(value: string);
    procedure setData(value: TDateTime);

  public
    procedure adicionarItem(item: TItemConsumido);
    procedure removerItem(item: TItemConsumido);

  published

end;

implementation

{TConta}

constructor TConta.Create;
begin
  FCodigo := '';
  FNome := '';
  FData := Now;
  FItems := TList.Create;
end;

initialization
  TConta.ClassName;

end.
